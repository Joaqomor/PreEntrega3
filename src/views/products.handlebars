<h3>Welcome! {{user.name}} | email: {{user.email}} | rol: {{user.role}} | <button class="btn btn-danger mb-3 mt-3" onclick="location.href='/users/logout'">Cerrar sesión</button></h3>

<h1>Products</h1>

{{#if products.length}}

    <div class='d-flex flex-wrap'>
        
        {{#each products}}

                <div class="card m-3 " style="width: 18rem;">
        
                    <div class="card-body">
                        <h5 class="card-title text-center fs-2">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Price : {{price}} €</li>
                        <li class="list-group-item">Stock :  {{stock}} </li>
                        <li class="list-group-item">Code : {{code}} </li>
                    </ul>
    
                </div>

        {{/each}}

    </div>
    <div class="d-flex justify-content-center">

        {{#if results.hasPrevPage}}
            <button onclick="location.href='{{results.prevLink}}'">Prev page {{results.prevPage}}</button>
        {{/if}}

        {{#if results.hasNextPage}}
            <button onclick="location.href='{{results.nextLink}}'">Next page {{results.nextPage}}</button>
        {{/if}}

    </div>

{{else}}

    <h2>Nothing to show you</h2>

{{/if}}